<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin"
    android:layout_marginLeft="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:background="@android:color/white"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/event_item_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/event_item_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding"
            android:paddingBottom="@dimen/padding"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginRight="@dimen/margin">

            <TextView
                android:id="@+id/event_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/colorGold" />

            <TextView
                android:id="@+id/event_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy_desc"
                android:textColor="@color/colorGray"
                android:layout_marginTop="@dimen/margin"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/event_item_img"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_toRightOf="@id/event_item_lin"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:background="@color/colorGray" />
    </LinearLayout>
</android.support.v7.widget.CardView>